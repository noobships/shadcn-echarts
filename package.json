{
  "name": "@devstool/shadcn-echarts",
  "version": "0.1.0",
  "description": "Apache ECharts charts styled to match shadcn/ui's design language with full dark/light mode support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./themes": {
      "types": "./dist/themes/index.d.ts",
      "import": "./dist/themes/index.js",
      "require": "./dist/themes/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "registry",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepublishOnly": "pnpm run build",
    "type-check": "tsc --noEmit",
    "lint": "oxlint src registry scripts demo/src demo/tests apps/www",
    "lint:fix": "oxlint --fix src registry scripts demo/src demo/tests apps/www",
    "registry:build": "shadcn build --output apps/www/public/r && node scripts/sync-registry-index.mjs",
    "registry:verify": "node scripts/verify-registry-assets.mjs",
    "verify": "node scripts/verify-phase7.mjs",
    "demo:generate-examples": "node scripts/generate-demo-examples.mjs",
    "demo:fetch-assets": "node scripts/fetch-demo-assets.mjs",
    "verify:demo-parity": "node scripts/verify-demo-parity.mjs",
    "www:dev": "pnpm -C apps/www dev",
    "www:build": "pnpm -C apps/www build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "echarts",
    "shadcn",
    "charts",
    "react",
    "typescript",
    "data-visualization",
    "dark-mode"
  ],
  "author": "",
  "homepage": "https://github.com/noobships/shadcn-echarts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noobships/shadcn-echarts.git"
  },
  "bugs": {
    "url": "https://github.com/noobships/shadcn-echarts/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "echarts": ">=6.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "echarts": "^6.0.0",
    "oxlint": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.7.0",
    "tsdown": "^0.3.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "culori": "^4.0.2"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
